{
  "name": "@ldk/cli",
  "version": "0.0.0",
  "private": false,
  "description": "a vue cli",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "files": [
    "lib",
    "bin.js"
  ],
  "bin": {
    "ldk-cli": "./bin.js"
  },
  "scripts": {
    "dev": "pnpm dev:tsx",
    "c:temp": "pnpm dev temp",
    "c:create": "pnpm dev create ../../lib -f",
    "dev:tsnode": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ./src/index.ts",
    "dev:node": "pnpm build && node ./bin.js",
    "dev:tsx": "tsx ./src/index.ts",
    "build": "rimraf ./lib && tsc"
  },
  "keywords": [
    "vue3",
    "cli"
  ],
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Devil-Training-Camp/ldk-cli.git",
    "directory": "packages/cli"
  },
  "author": {
    "name": "grey-coat",
    "email": "461252486@qq.com"
  },
  "license": "MIT",
  "dependencies": {
    "@ldk/shared": "workspace:*",
    "@ldk/template-manager": "workspace:*",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.23",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "tsx": "^4.12.0",
    "ts-node": "^10.9.2"
  }
}
