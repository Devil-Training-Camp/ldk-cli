{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended"
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "import/namespace": [
      0
    ],
    "import/no-named-as-default-member": [
      0
    ]
  },
  "settings": {
    "import/resolver": {
      "node": true
    }
  }
}